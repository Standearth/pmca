# Performance Optimization & Caching Configuration
# Prime Members for Cleaner Amazon Website

# Enable Apache modules (if available)
<IfModule mod_rewrite.c>
    RewriteEngine On
</IfModule>

# =====================================================
# BROWSER CACHING - VISUAL ASSETS & PERFORMANCE
# =====================================================

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images - Cache for 1 year (immutable assets)
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType image/vnd.microsoft.icon "access plus 1 year"
    
    # Fonts - Cache for 1 year
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/eot "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    
    # CSS & JS - Cache for 1 month (can be updated)
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Videos - Cache for 1 year
    ExpiresByType video/mp4 "access plus 1 year"
    ExpiresByType video/webm "access plus 1 year"
    
    # HTML files - Cache for 1 hour (frequently updated)
    ExpiresByType text/html "access plus 1 hour"
    
    # JSON files - Cache for 1 day
    ExpiresByType application/json "access plus 1 day"
    
    # XML files (sitemap, etc.) - Cache for 1 day
    ExpiresByType application/xml "access plus 1 day"
    ExpiresByType text/xml "access plus 1 day"
    
    # Default cache for other files - 1 week
    ExpiresDefault "access plus 1 week"
</IfModule>

# Cache-Control Headers (modern approach)
<IfModule mod_headers.c>
    # Images - 1 year cache, immutable
    <FilesMatch "\.(png|jpg|jpeg|webp|svg|ico)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
        Header unset ETag
        FileETag None
    </FilesMatch>
    
    # Fonts - 1 year cache, immutable
    <FilesMatch "\.(woff2|woff|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
        Header unset ETag
        FileETag None
    </FilesMatch>
    
    # CSS & JS - 1 month cache
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
    
    # Videos - 1 year cache
    <FilesMatch "\.(mp4|webm)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
    
    # HTML files - 1 hour cache, must revalidate
    <FilesMatch "\.html$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>
    
    # JSON & XML - 1 day cache
    <FilesMatch "\.(json|xml)$">
        Header set Cache-Control "public, max-age=86400"
    </FilesMatch>
</IfModule>

# =====================================================
# COMPRESSION - REDUCE FILE SIZES
# =====================================================

<IfModule mod_deflate.c>
    # Compress HTML, CSS, JS, XML, JSON
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/atom+xml
    AddOutputFilterByType DEFLATE image/svg+xml
    
    # Don't compress images or fonts (already optimized)
    SetEnvIfNoCase Request_URI \
        \.(?:gif|jpe?g|png|webp|woff2?|ttf|eot)$ no-gzip dont-vary
</IfModule>

# Gzip compression alternative
<IfModule mod_gzip.c>
    mod_gzip_on Yes
    mod_gzip_dechunk Yes
    mod_gzip_item_include file \.(html?|txt|css|js|php|pl|json|xml)$
    mod_gzip_item_include mime ^application/javascript$
    mod_gzip_item_include mime ^text/.*
    mod_gzip_item_exclude mime ^image/.*
    mod_gzip_item_exclude rspheader ^Content-Encoding:.*gzip.*
</IfModule>

# =====================================================
# SOCIAL MEDIA CRAWLERS
# =====================================================

# Allow all crawlers (including Facebook)
<RequireAll>
    Require all granted
</RequireAll>

# Specific rules for social media crawlers
<IfModule mod_rewrite.c>
    # Facebook crawler
    RewriteCond %{HTTP_USER_AGENT} facebookexternalhit [NC]
    RewriteRule .* - [E=FACEBOOK_CRAWLER:1]
    
    # Other social media crawlers
    RewriteCond %{HTTP_USER_AGENT} (Twitterbot|LinkedInBot|WhatsApp|Applebot) [NC]
    RewriteRule .* - [E=SOCIAL_CRAWLER:1]
</IfModule>

# Headers for crawlers
<IfModule mod_headers.c>
    # X-Robots-Tag for SEO
    Header always set X-Robots-Tag "index, follow, max-image-preview:large"
    
    # CORS headers for social media
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization, User-Agent"
</IfModule>

# =====================================================
# PERFORMANCE OPTIMIZATIONS
# =====================================================

# Remove ETags for better caching
<IfModule mod_headers.c>
    Header unset ETag
    FileETag None
</IfModule>

# Enable Keep-Alive connections
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# Vary header for better caching
<IfModule mod_headers.c>
    <FilesMatch "\.(css|js|html)$">
        Header append Vary Accept-Encoding
    </FilesMatch>
</IfModule>

# =====================================================
# SECURITY HEADERS (Performance-friendly)
# =====================================================

<IfModule mod_headers.c>
    # Content Security Policy (allow performance optimizations)
    Header always set Content-Security-Policy "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: https:; img-src 'self' data: https:; font-src 'self' data: https:;"
    
    # Security headers that don't impact performance
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # HSTS for HTTPS performance
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# =====================================================
# REDIRECTS & REWRITES
# =====================================================

<IfModule mod_rewrite.c>
    # Redirect HTTP to HTTPS for better performance and security
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Redirect www to non-www (or vice versa) for consistency
    RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
</IfModule>

# =====================================================
# MIME TYPES (Ensure proper content types)
# =====================================================

<IfModule mod_mime.c>
    # Web fonts
    AddType font/woff2 .woff2
    AddType font/woff .woff
    AddType application/font-woff .woff
    AddType application/font-woff2 .woff2
    
    # Images
    AddType image/webp .webp
    AddType image/svg+xml .svg
    
    # Other
    AddType application/javascript .js
    AddType text/css .css
</IfModule>
